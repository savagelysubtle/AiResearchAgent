{
  "environment": {
    "development_mode": true,
    "debug_logging": true,
    "verbose_mcp_logging": false,
    "enable_hot_reload": true
  },
  "file_management": {
    "base_output_directory": "./tmp",
    "auto_cleanup_temp_files": false,
    "max_file_age_days": 30,
    "backup_before_overwrite": true,
    "create_directories": true
  },
  "browser_settings": {
    "default_headless": false,
    "default_window_size": {
      "width": 1280,
      "height": 1100
    },
    "enable_screenshots": true,
    "screenshot_quality": 85,
    "max_browser_instances": 5
  },
  "database_settings": {
    "default_database_path": "./tmp/databases",
    "enable_database_backups": true,
    "backup_frequency_hours": 24,
    "max_database_size_mb": 1024
  },
  "mcp_integration": {
    "enable_mcp_caching": true,
    "mcp_cache_dir": "./tmp/mcp_cache",
    "mcp_timeout_seconds": 30,
    "max_mcp_retries": 3,
    "auto_discover_servers": false
  },
  "agent_settings": {
    "max_concurrent_agents": 3,
    "default_agent_timeout": 300,
    "enable_agent_persistence": true,
    "agent_state_directory": "./tmp/agent_state"
  },
  "logging": {
    "log_level": "INFO",
    "log_file": "./tmp/logs/ai_research_assistant.log",
    "max_log_size_mb": 100,
    "log_rotation_count": 5,
    "enable_structured_logging": true
  },
  "security": {
    "enable_input_validation": true,
    "sanitize_file_paths": true,
    "restrict_file_access": true,
    "allowed_file_extensions": [".pdf", ".txt", ".md", ".json", ".csv"],
    "blocked_directories": ["system32", "etc", "bin"]
  }
}
